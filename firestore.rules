
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Defines a set of reusable functions.
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/userProfiles/$(userId)).data.role;
    }
    function isAdmin() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'admin';
    }
    function isMember() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'member';
    }
    match /userProfiles/{userId} {
      // Allow users to read their own profile.
      allow get: if isOwner(userId) || isAdmin();
      // Allow admins to read any profile.
      allow list: if isAdmin();
      // Allow a user to create their own profile upon sign-up.
      // The role must be 'member' by default, and cannot be set to 'admin' by the user.
      allow create: if isOwner(userId) && request.resource.data.role == 'member';
      // Allow admins to create, update, or delete any user profile.
      // This is how roles are managed.
      allow write: if isAdmin();
    }
    match /projects/{projectId} {
      allow read, write: if isSignedIn();
    }
    match /projects/{projectId}/{document=**} {
      allow read, write: if isSignedIn();
    }
    match /tasks/{taskId} {
      allow read, write: if isSignedIn();
    }
    match /tasks/{taskId}/{document=**} {
        allow read, write: if isSignedIn();
    }
    match /bugs/{bugId} {
      allow read, write: if isSignedIn();
    }
    match /timeLogs/{timeLogId} {
        allow read, write: if isSignedIn();
    }
    match /sprints/{sprintId} {
      allow read, write: if isSignedIn();
    }
    match /wiki/{wikiPageId} {
        allow read, write: if isSignedIn();
    }
    match /notifications/{notificationId} {
        allow read, write: if isSignedIn();
    }
    match /auditLogs/{auditLogId} {
      // Only admins can read audit logs.
      allow get, list: if isAdmin();
      // Any authenticated user (even anonymous on login fail) can create an audit log.
      allow create: if true;
      // Logs are immutable.
      allow update, delete: if false;
    }
  }
}


rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reusable functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserData(userId) {
        return get(/databases/$(database)/documents/userProfiles/$(userId)).data;
    }

    function isAdmin() {
      return isSignedIn() && getUserData(request.auth.uid).role == 'admin';
    }

    function isProjectMember(projectId) {
      return isSignedIn() && exists(/databases/$(database)/documents/projects/$(projectId)/members/$(request.auth.uid));
    }

    function isProjectOwner(projectId) {
      return isSignedIn() && get(/databases/$(database)/documents/projects/$(projectId)/members/$(request.auth.uid)).data.role == 'owner';
    }

    // User Profiles
    match /userProfiles/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isSignedIn();
      allow create: if (isOwner(userId) && request.resource.data.role == 'member') || (isAdmin() && request.resource.data.role == 'admin');
      allow update, delete: if isAdmin();
    }

    // Projects and their members
    match /projects/{projectId} {
      allow read: if isProjectMember(projectId) || isAdmin();
      allow create: if isSignedIn();
      allow update: if isProjectOwner(projectId) || isAdmin();
      allow delete: if isProjectOwner(projectId) || isAdmin();

      match /members/{userId} {
        // A project member or admin can get/list any other member in that project
        allow read: if isProjectMember(projectId) || isAdmin();
        // Only a project owner or admin can add/remove members
        allow write: if isProjectOwner(projectId) || isAdmin();
      }
    }

    // Tasks and their comments
    match /tasks/{taskId} {
      function getTaskProjectId() {
        return get(/databases/$(database)/documents/tasks/$(taskId)).data.projectId;
      }
      allow read, write: if isProjectMember(getTaskProjectId()) || isAdmin();

      match /comments/{commentId} {
        allow read, write: if isProjectMember(getTaskProjectId()) || isAdmin();
      }
    }

    // Bugs
    match /bugs/{bugId} {
      function getBugProjectId() {
        return get(/databases/$(database)/documents/bugs/$(bugId)).data.projectId;
      }
      allow create: if isSignedIn();
      allow read, update, delete: if isProjectMember(getBugProjectId()) || isAdmin();
    }

    // Sprints
    match /sprints/{sprintId} {
      function getSprintProjectId() {
        return get(/databases/$(database)/documents/sprints/$(sprintId)).data.projectId;
      }
      allow read, write: if isProjectMember(getSprintProjectId()) || isAdmin();
    }
    
    // Time Logs
    match /timeLogs/{timeLogId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow write: if isOwner(request.resource.data.userId);
    }

    // Wiki
    match /wiki/{wikiPageId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();

      match /versions/{versionId} {
        allow read: if isSignedIn();
        allow write: if false; // Versions are immutable
      }
    }

    // Notifications
    match /notifications/{notificationId} {
      allow get: if isOwner(resource.data.userId) || isAdmin();
      allow list: if (request.query.where[0] == ['userId', '==', request.auth.uid]) || isAdmin();
      allow create: if false; 
      allow update: if isOwner(get(/databases/$(database)/documents/notifications/$(notificationId)).data.userId);
      allow delete: if false;
    }

    // Audit Logs
    match /auditLogs/{logId} {
      allow read: if isAdmin();
      allow create: if isSignedIn(); // Allow any signed-in user to trigger an audit log event
      allow update, delete: if false; // Logs are immutable
    }
  }
}

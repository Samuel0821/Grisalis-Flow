
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserData(userId) {
        return get(/databases/$(database)/documents/userProfiles/$(userId)).data;
    }

    function isAdmin() {
      return isSignedIn() && getUserData(request.auth.uid).role == 'admin';
    }
    
    function isProjectMember(projectId) {
      return exists(/databases/$(database)/documents/projects/$(projectId)/members/$(request.auth.uid));
    }

    function isProjectOwner(projectId) {
      return get(/databases/$(database)/documents/projects/$(projectId)/members/$(request.auth.uid)).data.role == 'owner';
    }

    // User Profiles
    match /userProfiles/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow list: if isSignedIn();
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId) || isAdmin();
    }

    // Projects and their subcollections
    match /projects/{projectId} {
      allow get, list: if isProjectMember(projectId) || isAdmin();
      allow create: if isSignedIn();
      allow update, delete: if isProjectOwner(projectId) || isAdmin();

      match /members/{memberId} {
        allow read: if isProjectMember(projectId) || isAdmin();
        allow create, update, delete: if isProjectOwner(projectId) || isAdmin();
      }
    }

    // Tasks and their comments
    match /tasks/{taskId} {
      // Create: Anyone can create a task, rules below will validate it.
      allow create: if isSignedIn();
      // Read, Update, Delete: Only members of the project this task belongs to, or admins.
      allow get, update, delete: if isProjectMember(resource.data.projectId) || isAdmin();
      // List: Only allow listing tasks if the query is filtered by a project the user is a member of.
      allow list: if (request.query.keys.hasAny(['projectId']) && isProjectMember(request.query.projectId)) || isAdmin();

      match /comments/{commentId} {
        allow read, write: if isProjectMember(get(/databases/$(database)/documents/tasks/$(taskId)).data.projectId) || isAdmin();
      }
    }

    // Bugs
    match /bugs/{bugId} {
      allow create: if isSignedIn();
      allow get, update, delete: if isProjectMember(resource.data.projectId) || isAdmin();
      allow list: if isAdmin(); // Only admins can list all bugs for now. Can be expanded later.
    }

    // Sprints
    match /sprints/{sprintId} {
      allow create: if isSignedIn();
      allow get, update, delete: if isProjectMember(resource.data.projectId) || isAdmin();
      allow list: if (request.query.keys.hasAny(['projectId']) && isProjectMember(request.query.projectId)) || isAdmin();
    }
    
    // Time Logs
    match /timeLogs/{timeLogId} {
      // Users can only manage their own time logs. Admins can see all.
      allow get: if isOwner(resource.data.userId) || isAdmin();
      allow list: if (request.query.userId == request.auth.uid) || isAdmin();
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(resource.data.userId);
    }

    // Wiki and versions
    match /wiki/{wikiPageId} {
      allow read, write: if isSignedIn();

      match /versions/{versionId} {
        allow read: if isSignedIn();
        allow write: if false; // Versions are immutable
      }
    }

    // Notifications
    match /notifications/{notificationId} {
      // Users can only manage their own notifications.
      allow get: if isOwner(resource.data.userId);
      allow list: if request.query.userId == request.auth.uid;
      allow create: if false; // Created by backend logic only
      allow update, delete: if isOwner(resource.data.userId);
    }

    // Audit Logs
    match /auditLogs/{logId} {
      allow read: if isAdmin();
      allow create: if isSignedIn(); // Any signed-in user action can trigger a log.
      allow update, delete: if false; // Immutable
    }
  }
}
